<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group3f.gifmaker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/FullscreenTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.long3f.activity.EditGifActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.long3f.activity.GifsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.duong3f.mvp.cropimage.CropVideoActivity"
            android:largeHeap="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.duong3f.mvp.imagetogif.SelectImageFormFolderAcivity"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeNoActionBar" />
        <activity
            android:name="com.long3f.activity.GifDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name="com.long3f.activity.SettingActivity" />
        <activity
            android:name="com.long3f.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.duong3f.crop.activity.MainActivity">

        </activity>
        <activity android:name="com.duong3f.crop.activity.TrimmerActivity" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8535fcafdeabaedb3b6834a850382f1e54275482" />
    </application>

</manifest>